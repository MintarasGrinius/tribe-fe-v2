// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String
  profile   Profile
}

type Profile {
  firstName String
  lastName  String
  profilePicture String?
}

type Event {
  id            Int
  organizer_id  Int
  created_at    DateTime
  updated_at    DateTime
}

type EventDetail  {
   id           Int
   capacity     Int
   description  String
   dress_code   String
   own_drinks   Boolean
   location     String
   time       DateTime
   title      String
   event_id     Int
   created_at   String
   updated_at   String
   category     String
   age_group    AgeGroup
}
type AgeGroup {
  from  Int
  to    Int
}